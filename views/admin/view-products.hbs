<section>


  <div class=" d-flex justify-content-end px-5 py-3">
    <a href="/admin/add-products"> <button class=" btn btn-outline-dark " type="button">
        Add Products
      </button></a>
  </div>


  <div class="container">
    <table class="table" id="admin-view-products">
      <thead>
        <tr>
          <th scope="col">No</th>
          <th scope="col">Name</th>
          <th scope="col">Category</th>
          <th scope="col">Description</th>
          <th scope="col">Price</th>
          <th scope="col">image</th>
          <th scope="col">options</th>
        </tr>
      </thead>
      <tbody>
        {{#each products}}
        <tr>
          <th scope="row">1</th>
          <td>{{this.name}}</td>
          <td>{{this.category}}</td>
          <td>{{this.description}}</td>
          <td>Rs{{this.price}}</td>
          <td><img style="height: 50px; width: 50px;" src="/product-images/{{this._id}}.png" alt=""></td>
          <td><a href="/admin/edit-products?id={{this._id}}" class="btn btn-outline-primary">Edit</a>
            <a href="/admin/delete-product?id={{this._id}}" class="btn btn-outline-danger"
              onclick="return confirm('are you sure you want to delete {{this.name}}?')">Delete</a>
          </td>
          <!--
        another method to pass id
        <td><a href="/admin/delete-product/{{this._id}}" class="btn btn-danger">Delete</a></td>
        -->
          {{/each}}
        </tr>
      </tbody>
    </table>
  </div>
</section>