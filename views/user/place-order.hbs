<div class="container mt-3">

    <form action="" id="checkout-form">
        <div class=" p-4 w-75  mx-auto">
            <h2>Enter Delivery Details</h2>
            <div class="mb-3 mt-3">
                <label for="" class="form-label">Address </label>
                <input type="Text" class="form-control" id="" name="address">
            </div>
            <div class="mb-3">
                <label for="" class="form-label">Pincode</label>
                <input type="text" class="form-control" id="" name="pincode">
            </div>
            <div class="mb-3">
                <label for="" class="form-label">phone no.</label>
                <input type="text" class="form-control" id="" name="phone">
                <input type="text" name="id" value="{{user._id}}" hidden>
            </div>
            <div class="d-flex justify-content-center ">
                <div class="border border-dark border-2 rounded p-5 position-fixed ">
                    <p>Total amount: Rs{{total}}</span></p>
                    <hr>
                    <div class="">
                        <input class="form-check-input" type="radio" name="payment" id="" value="cod">
                        <label class="form-check-label" for="COD">
                            COD
                        </label>
                    </div>
                    <div class="mb-3">
                        <input class="form-check-input" type="radio" name="payment" id="" value="online">
                        <label class="form-check-label" for="Online">
                            ONLINE PAYEMENT
                        </label>
                    </div>
                    <a href="/order-placed"> <button type="submit" class="btn btn-success">CHECKOUT</button></a>
                </div>
            </div>
    </form>
</div>
</div>
</div>