<section>
  <div class="container mt-5">
    <div class="row">
      {{#each products}}
      <div class="col-md-3 p-3">
        <div class="card border-3 border-dark" style="width: 15rem; height:30rem;">
          <img style="height: 15rem;" src="{{this._id}}.png" class="card-img-top" alt="...">
          <div class="card-body">
            <h5 class="card-title">{{this.name}}</h5>
            <p class="card-text">{{this.description}}.</p>
            <p class="card-text">Rs{{this.price}}.</p>
            <!--<a href="/add-to-cart?id={{this._id}}" class="btn btn-primary">Add To Cart</a>-->
            <button onclick="addToCart('{{this._id}}')" class="btn btn-dark">Add to cart</button>
          </div>
        </div>
      </div>
      {{/each}}

    </div>
  </div>
</section>