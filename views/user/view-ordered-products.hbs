<section>
  <div class="container mt-5">
    <div class="row">
      {{#each orderProducts}}
      <div class="col-md-3 p-3">
        <div class="card" style="width: 15rem; height:30rem;">
          <img style="height: 15rem;" src="/product-images/{{this.product._id}}.png" class="card-img-top" alt="...">
          <div class="card-body">
            <h5 class="card-title">{{this.product.name}}</h5>
            <p class="card-text">Rs{{this.product.price}}.</p>
            <p class="card-text">{{this.product.description}}.</p>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</section>